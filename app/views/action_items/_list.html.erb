<%- model_class = ActionItem -%>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:due_date) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% action_items.each do |action_item| %>
      <tr>
        <td><%= link_to action_item.name, action_item_path(action_item), class: 'main-link' %></td>
        <td><%= action_item.description %></td>
        <td><%= action_item.status %></td>
        <td><%= action_item.due_date %></td>
        <td>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      action_item_path(action_item),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Action Item', new_action_item_path(project_id: @project.id), :class => 'btn btn-primary' %>
