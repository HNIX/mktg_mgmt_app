<%- model_class = ActionItemGroup -%>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% action_item_groups.each do |action_item_group| %>
      <tr>
        <td><%= link_to action_item_group.name, action_item_group_path(action_item_group), class: 'main-link' %></td>
        <td>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      action_item_group_path(action_item_group),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Action Item Group', new_action_item_group_path(project_id: @project.id), :class => 'btn btn-primary' %>
